<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/project_title"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Curso"
        tools:targetApi="31">
        <activity
            android:name=".tesis.ImageFullscreenActivity"
            android:exported="false" />
        <activity
            android:name=".tesis.VideoFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_video_fullscreen"
            android:theme="@style/Theme.Curso.Fullscreen" />
        <activity
            android:name=".tesis.VideoFullScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.Curso" />
        <activity
            android:name=".VideoFullScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.Curso" />
        <activity
            android:name=".tesis.passwordActivity"
            android:exported="false" />
        <activity
            android:name=".tesis.BottomBarActivity"
            android:exported="false" />
        <activity
            android:name=".tesis.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".tesis.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>